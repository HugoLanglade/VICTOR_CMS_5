<html>
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="./assets/images/favicon.png">
    <script src="./js/works_js/arrows.js"></script> 
    <script src="./js/works_js/changeLanguage_works.js"></script> 
    <script src="./js/works_js/lightbox.js"></script>
    <script src="./js/works_js/iframe.js"></script>
    <script src="./js/works_js/menu_projets.js"></script>
    <script src="./js/works_js/menu_projets_phone2.js"></script>
    <script src="./js/works_js/year.js"></script>
    <link rel="icon" type="image/x-icon" href="./assets/images/favicon.png">
    <link rel="stylesheet" type="text/css" href="./css/style_works.css" /> 
    <title>{{ title }}</title>
</head>

<body>
<div class="contenu">
    <div class="container_gauche">
            <div class="container_gauche_phone">
                <img src="./assets/images_rework/works1.webp" class="works_image_phone"> 
            <a class="icon_gauche" href="index.html"><img src="./assets/images_rework/nav_icon2.webp" class="icon_gauche"> </a> 
            </div>
        <img src="./assets/images/works1.png" class="works_image"> 
        <div class="langue_container">
            <button class="en_btn" onclick="changeLanguage('en')"><img class="img_langue" src="./assets/images_rework/Bouton_EN.webp"></button>
            <button class="fr_btn" onclick="changeLanguage('fr')"><img class="img_langue" src="./assets/images_rework/Bouton_FR.webp"></button>
        </div>
        
        <ul class="liste_expos">
        {% set uniqueYears = [] %}
        {% for work in collections.works %}
          {% set year = work.data.année %}
          {% if uniqueYears.indexOf(year) == -1 %}
            {% set _ = uniqueYears.push(year) %}
          {% endif %}
        {% endfor %}
        
        {% for year in uniqueYears|reverse %}
          <h1>{{ year }}</h1>
          {% for work in collections.works %}
            {% if work.data.année == year %}
              <li data-year="{{ work.data.année }}" data-month="{{ work.data.mois }}" data-article-id="{{ work.data.numero_article }}">
                <a href="#">{{ work.data.nom_lieu }}</a>
              </li>
            {% endif %}
          {% endfor %}
        {% endfor %}
        </ul>
    </div>  
</div>

</header>

    <main>
        <div class="container_droite">
            {% for works in collections.works %}
                <article class="descriptif_projets" id="{{works.data.numero_article}}">
    
    <!-- TITRE -->
    <div class="container_titre_general">
        <div class="container_titre_fr">
            <h2 class="titre_projets_fr">{{works.data.fr_nom_maj}}</h2>
            <p class="lieu_fr">{{works.data.fr_details_lieu}}</p>
            <p class="type_fr">{{works.data.fr_type_duree}}</p>
            <p class="lien_video_fr"><a href="{{works.data.lien}}" target="_blank">{{works.data.texte_lien_fr}}</a></p> 
             
        </div>
        <div class="container_titre_en">
            <h2 class="titre_projets_en">{{works.data.en_nom_maj}}</h2>
            <p class="lieu_en">{{works.data.en_details_lieu}}</p>
            <p class="type_en">{{works.data.en_type_duree}}</p>
            <p class="lien_video"><a href="{{works.data.lien}}" target="_blank">{{works.data.texte_lien_en}}</a></p>
            
        </div>
        <div class="langue_container_phone">
            <button class="en_btn" onclick="changeLanguage('en')"><img class="img_langue" src="./assets/images/Bouton_EN.png"></button>
            <button class="fr_btn" onclick="changeLanguage('fr')"><img class="img_langue" src="./assets/images/Bouton_FR.png"></button>
        </div>
        <div class="container_icon">
            <a id="iconLink" href="./index.html"><img src="./assets/images/Contact Page/nav_icon2.png" class="icon"></a>
        </div>
    </div>
    <!-- PHOTOS -->
    <div class="photos" >
            <button class="bouton_back"><img src="./assets/images/fleche_left.png"></button>
            <div class="container_bouton">
                <button class="bouton_grand"><img class="img_pleinecran" src="./assets/images/pleinecran.png"></button>
                <button class="bouton_forward_phone"><img src="./assets/images/fleche_right.png"></button>
                <img class="image" src="{{works.data.image_couv}}">
              </div>
     {% for image in works.data.images %}
        <img class="image" src="{{ image.path }}">
    {% endfor %}
            <button class="bouton_forward"><img src="./assets/images/fleche_right.png"></button> 
            <!-- Add more images as needed -->
    </div>
    <!---DESCRIPTION DES PROJETS -->
    <div class="texte_projets_fr">
        <p class="description_fr">{{works.data.description_fr}}</p>
        <p class="description_pieces_fr">{{works.data.details_pieces_fr}}</p>
    </div> 
    <div class="texte_projets_en">
        <p class="description_en">{{works.data.description_en}} </p>
        <p class="description_pieces_en">{{works.data.details_pieces_en}}</p>
    </div> 
    <!---CREDITS-->
    <div class="credits_texte">
        <p class="credits">{{works.data.credits}}</p>
    </div>
    <div class="vimeo-container" id="vimeo_video">
        <div style="padding:56.25% 0 0 0;position:relative;">
            <iframe src="{{ works.data.vimeo_src }}" style="position:absolute;top:0;left:0;width:100%;height:100%;" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen></iframe>
        </div>
    </div>
    
    <script src="https://player.vimeo.com/api/player.js"></script>
</article>  

            {% endfor %}
        </div>
    </main>
</body>
</html>
