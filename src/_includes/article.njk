---
layout: 'base_works.njk'
---

{% block article %}
<article class="descriptif_projets" id="{{numero_article}}">
    
    <!-- TITRE -->
    <div class="container_titre_general">
        <div class="container_titre_fr">
            <h2 class="titre_projets_fr">{{fr_nom_maj}}</h2>
            <p class="lieu_fr">{{fr_details_lieu}}</p>
            <p class="type_fr">{{fr_type_duree}}</p>
            <p class="lien_video_fr"><a href="{{lien}}" target="_blank">{{texte_lien_fr}}</a></p> 
             
        </div>
        <div class="container_titre_en">
            <h2 class="titre_projets_en">{{en_nom_maj}}</h2>
            <p class="lieu_en">{{en_details_lieu}}</p>
            <p class="type_en">{{en_type_duree}}</p>
            <p class="lien_video"><a href="{{lien}}" target="_blank">{{texte_lien_en}}</a></p>
            
        </div>
        <div class="langue_container_phone">
            <button class="en_btn" onclick="changeLanguage('en')"><img class="img_langue" src="/assets/images/Bouton_EN.png"></button>
            <button class="fr_btn" onclick="changeLanguage('fr')"><img class="img_langue" src="/assets/images/Bouton_FR.png"></button>
        </div>
        <div class="container_icon">
            <a id="iconLink" href="{% if container_gauche_display === 'flex' %}index.html{% else %}works.html{% endif %}"><img src="/assets/images/Contact Page/nav_icon2.png" class="icon"></a>
        </div>
    </div>
    <!-- PHOTOS -->
    <div class="photos" >
            <button class="bouton_back"><img src="/assets/images/fleche_left.png"></button>
            <div class="container_bouton">
                <button class="bouton_grand"><img class="img_pleinecran" src="/assets/images/pleinecran.png"></button>
                <button class="bouton_forward_phone"><img src="/assets/images/fleche_right.png"></button>
                <img class="image" src="{{image_couv}}">
              </div>
     {% for image in images %}
        <img class="image" src="{{ image.path }}">
    {% endfor %}
            <button class="bouton_forward"><img src="/assets/images/fleche_right.png"></button> 
            <!-- Add more images as needed -->
    </div>
    <!---DESCRIPTION DES PROJETS -->
    <div class="texte_projets_fr">
        <p class="description_fr">{{description_fr}}</p>
        <p class="description_pieces_fr">{{details_pieces_fr}}</p>
    </div> 
    <div class="texte_projets_en">
        <p class="description_en">{{description_en}} </p>
        <p class="description_pieces_en">{{details_pieces_en}}</p>
    </div> 
    <!---CREDITS-->
    <div class="credits_texte">
        <p class="credits">{{credits}}</p>
    </div>
    {% if vimeo_src == "x" %}
    <div class="vimeo-container_hide" id="vimeo_video">
    {% else %}
    <div class="vimeo-container_show" id="vimeo_video">
    {% endif %}
    <div style="padding:56.25% 0 0 0;position:relative;">
        <iframe src="{{ vimeo_src }}" style="position:absolute;top:0;left:0;width:100%;height:100%;" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen></iframe>
    </div>
</div>
    <script src="https://player.vimeo.com/api/player.js"></script>
</article> 
{% endblock %}